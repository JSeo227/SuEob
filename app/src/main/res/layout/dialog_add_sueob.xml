<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/sueobNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수업명"
        android:textSize="30dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/sueobNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수업명을 적어주세요"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/sueobNameTV" />

    <TextView
        android:id="@+id/classRoomNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교실명"
        android:textSize="30dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/sueobNameTV"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/classRoomNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교실명을 적어주세요"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/sueobNameTV"
        app:layout_constraintLeft_toRightOf="@id/classRoomNameTV" />

    <TextView
        android:id="@+id/daySelectTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요일 선택"
        android:textSize="30dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/classRoomNameTV"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioGroup
        android:id="@+id/daySelectRG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/daySelectTV"
        app:layout_constraintLeft_toLeftOf="parent">
        <RadioButton
            android:id="@+id/day_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월"
            android:textSize="20dp" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>