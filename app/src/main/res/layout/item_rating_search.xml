<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/className"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미적분 I"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/teacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김선생"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/className"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="난이도"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/teacherName"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:id="@+id/level_bar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/level"
        app:layout_constraintTop_toBottomOf="@id/teacherName">

        <TextView
            android:id="@+id/level_easy"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:background="#fdff8d" />

        <TextView
            android:id="@+id/level_normal"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:background="#90ff8d" />

        <TextView
            android:id="@+id/level_hard"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="4"
            android:background="#ff8d8d" />
    </LinearLayout>

    <TextView
        android:id="@+id/honey_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="56%"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/teacherName"
        app:layout_constraintLeft_toRightOf="@id/level_bar"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/honey"
        app:layout_constraintBottom_toTopOf="@id/honey_percent"
        app:layout_constraintLeft_toRightOf="@id/level_bar"
        app:layout_constraintRight_toRightOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>